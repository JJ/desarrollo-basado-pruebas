'use strict';

module.exports = function(grunt) {
    
    // Configuración del proyecto
    grunt.initConfig({
	docco: {
	    debug: {
		src: ['*.js'],
		options: {
		    output: 'docs/'
		}
	    }
	}
    });

    // Carga el plugin de grunt para hacer esto
    grunt.loadNpmTasks('grunt-docco');

    // Tarea por omisión: generar la documentación
    grunt.registerTask('docs', ['docco']);
};
